<h1 class = "middle">Owner Management Page for managing Foods and Customers</h1><br>

<h4>Food items table</h4>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Food item</th>
      <th scope="col">Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>
      
  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.food_item %></td>
        <td><%= food.price %></td>
        <td><%= link_to "Edit", edit_food_path(food) %></td>
        <td><%= link_to "Delete", food, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p id="notice"><%= notice %></p>

<br><%= link_to "New Food", new_food_path, class: "btn btn-primary" %><br><br>


<h4>List of Customers</h4>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Food item</th>
      <th scope="col">Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>
      
  <tbody>
    <% @registrations.each do |registration| %>
      <tr>
        <td><%= registration.username %></td>
        <td><%= registration.phone_number %></td>
        <td><%= link_to "Edit", edit_registration_path(registration) %></td>
        <td><%= link_to "Delete", registration, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h4>List of Orders by Customers</h4>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Food item</th>
      <th scope="col">Price</th>
      <th scope="col">Phone Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>
      
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.username %></td>
        <td><%= order.price %></td>
        <td><%= order.phone_number %></td>
        <td><%= link_to "Done", order, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

