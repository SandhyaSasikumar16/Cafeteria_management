<p id="notice"><%= notice %></p>

<h1>My Orders</h1><br>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Food items</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @orders.each do |order| %>
      <% if order.phone_number == current_phone_number %>
      <tr>
        <td><%= order.food_items %></td>
        <td><%= order.price %></td>
        <td><%= link_to "Destroy", order, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br><br>

<%= link_to "New Order", home_about_path, class: "btn btn-primary" %>
<%= link_to "Place Order", home_about_path, class: "btn btn-primary" %>
